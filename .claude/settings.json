{
  "permissions": {
    "allow": [
      "Bash(make format:*)",
      "Bash(make lint:*)",
      "Bash(make test:*)",
      "Bash(go test:*)",
      "Bash(./feedspool --help)",
      "Bash(go build:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit(*)",
        "hooks": [
          {
            "type": "command",
            "command": "make format && make lint && make test"
          }
        ]
      }
    ]
  }
}
